# MatchboxPro - Configurazione NPM per compatibilit√† cross-platform
# Supporta sia Mac Intel che Apple Silicon

# Configurazione per architettura automatica
target_arch=
target_platform=darwin

# Ottimizzazioni per installazione
prefer-offline=false
audit=false
fund=false

# Configurazione per dipendenze native
rebuild-bundle=true
force=false

# Configurazione per esbuild e dipendenze binarie
# Permette installazione di binari per architettura corrente
optional=true
